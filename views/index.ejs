<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body style="margin: 0; padding: 0; height: 100vh; font-family: Arial, sans-serif; display: flex; justify-content: center; align-items: center; background-color: #f8f8f8;">
  <div style="border: black solid 4px; border-radius: 8px; width: 100%; max-width: 600px; height: 90vh; overflow-y: auto; padding: 20px; box-sizing: border-box; background-color: #fff;">
    <div style="background-color: #f2f2f2; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1); margin-bottom: 20px;">
      <form method="POST" action="/new" style="display: flex; flex-direction: column;">
        <h1 style="text-align: center; color: #333;">Let's chat anonymously</h1>
        <input type="text" name="author" placeholder="Pseudonymous" style="padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 4px;">
        <textarea name="text" placeholder="Tell us something" style="padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 4px;"></textarea>
        <input type="submit" value="Submit" style="background-color: #333; color: white; padding: 10px; border: none; border-radius: 4px; cursor: pointer;">
      </form>
    </div>
    <div>
      <% messages.forEach(function(message) { %>
        <div style="background-color: #fff; padding: 10px; border: 1px solid #ddd; border-radius: 4px; margin-bottom: 10px;">
          <p><strong>User:</strong> <%= message.user %></p>
          <p><strong>Message:</strong> <%= message.text %></p>
          <p><strong>Date:</strong> <%= message.added.toLocaleString() %></p>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
